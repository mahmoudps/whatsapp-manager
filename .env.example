# Authentication
# Replace with a strong secret in production
JWT_SECRET=fallback-secret-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
MAX_AUTH_ATTEMPTS=5

# Admin credentials
# Change these defaults immediately
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Server settings
PORT=3000
HOST=0.0.0.0
# Comma-separated list of allowed origins. Leave blank to restrict to same origin.
CORS_ORIGIN=
RATE_LIMIT_MAX_REQUESTS=100

# Database
DATABASE_PATH=./data/whatsapp_manager.db

# WebSocket
ENABLE_WEBSOCKET=false
WEBSOCKET_PORT=3001
NEXT_PUBLIC_WEBSOCKET_URL=
# Allowed frontend origin used by the WebSocket server
FRONTEND_URL=

# WhatsApp
WHATSAPP_SERVER_PORT=3002

# Logging
LOG_LEVEL=debug

# Enable debug-only API endpoints (avoid in production)
DEBUG_ROUTES=false
