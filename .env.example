# Authentication
# Replace with a strong secret in production. DO NOT use this default value.
JWT_SECRET=fallback-secret-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
MAX_AUTH_ATTEMPTS=5

# Admin credentials
# Change these defaults immediately! DO NOT USE IN PRODUCTION.
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Server settings
PORT=3000
HOST=0.0.0.0
# Comma-separated list of allowed origins. Leave blank to restrict to same origin.
CORS_ORIGIN=
RATE_LIMIT_MAX_REQUESTS=100

# Database
DATABASE_PATH=./data/whatsapp_manager.db

# WebSocket
ENABLE_WEBSOCKET=false
WEBSOCKET_PORT=3001
# Default WebSocket URL clients should connect to
# Include the /ws/socket.io path by default
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3001/ws/socket.io
# Allowed frontend origin used by the WebSocket server
FRONTEND_URL=

# Automatically reconnect all devices when the server starts
AUTO_CONNECT_DEVICES=true

# Restart policy for Docker containers. "unless-stopped" automatically
# restarts containers when the server reboots. Set to "no" to disable
# auto-start.
RESTART_POLICY=unless-stopped

# WhatsApp
WHATSAPP_SERVER_PORT=3002

# Logging
LOG_LEVEL=debug

# Enable debug-only API endpoints (avoid in production)
DEBUG_ROUTES=false

# External API key used for programmatic access
EXTERNAL_API_KEY=
