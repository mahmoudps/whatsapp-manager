# Authentication
JWT_SECRET=fallback-secret-key-change-in-production
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d
MAX_AUTH_ATTEMPTS=5

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# Server settings
PORT=3000
HOST=0.0.0.0
# Comma-separated list of allowed origins. Leave blank to restrict to same origin.
CORS_ORIGIN=
RATE_LIMIT_MAX_REQUESTS=100

# Database
DATABASE_PATH=./data/whatsapp_manager.db

# WebSocket
ENABLE_WEBSOCKET=false
WEBSOCKET_PORT=3001

# WhatsApp
WHATSAPP_SERVER_PORT=3002
PUPPETEER_EXECUTABLE_PATH=

# Logging
LOG_LEVEL=info
